<?php
$a = array (1,2,3,4);
$b = count($a);
 
function potencia ($v1,$v2){
    $rdo=pow($v1, $v2);
    return $rdo;
}
 
echo "<table border = 1>";
for ($n1=1; $n1<=$b; $n1++){
    echo "<tr>";
    for ($n2=1; $n2<=$b; $n2++){
        echo"<td>", potencia($n1,$n2), "<td>";
    }
    echo "<tr>";
}
echo "</table>";
?>
